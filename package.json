{
    "name": "huawei-cloud-cli-action",
    "version": "1.0.3",
    "private": true,
    "description": "action to setup KooCLI, add it to the PATH, and set default configuration.",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "run": "node ./lib/main.js",
        "package": "ncc build -m --license licenses.txt",
        "lint-create": "eslint --init",
        "lint": "eslint src",
        "format": "prettier --write **/*.ts",
        "format-check": "prettier --check **/*.ts",
        "test": "jest --collectCoverage",
        "all": "npm run lint && npm run format && npm run build && npm run package"
    },
    "keywords": [
        "actions",
        "KooCLI",
        "cli"
    ],
    "dependencies": {
        "@actions/core": "^1.8.2",
        "@actions/exec": "^1.1.1",
        "@actions/tool-cache": "^2.0.1"
    },
    "devDependencies": {
        "@types/jest": "^28.1.1",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "@vercel/ncc": "^0.34.0",
        "eslint": "^8.17.0",
        "jest": "^28.1.1",
        "prettier": "2.6.2",
        "ts-jest": "^28.0.4",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.3"
    }
}
